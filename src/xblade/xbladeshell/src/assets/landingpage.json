    {
      "type": "section",
      "id": "quick-actions-section",
      "title": "Quick Actions",
      "cssClass": "quick-actions-section",
      "elements": [
        {
          "type": "button",
          "id": "create-resource-btn",
          "text": "Create a Resource",
          "variant": "primary",
          "icon": "plus",
          "cssClass": "quick-action-button"
        },
        {
          "type": "button",
          "id": "view-all-resources-btn",
          "text": "All Resources",
          "variant": "secondary",
          "icon": "list",
          "cssClass": "quick-action-button"
        },
        {
          "type": "button",
          "id": "resource-groups-btn",
          "text": "Resource Groups",
          "variant": "secondary",
          "icon": "folder",
          "cssClass": "quick-action-button"
        },
        {
          "type": "button",
          "id": "cost-management-btn",
          "text": "Cost Management",
          "variant": "secondary",
          "icon": "chart",
          "cssClass": "quick-action-button"
        }
      ]
    }
  ],
  "templates": {
    "icon-template": {
      "html": "<div class='service-icon-container'><i class='icon icon-{{icon}}'></i><span class='service-name'>{{name}}</span></div>"
    },
    "name-template": {
      "html": "<div class='service-name-container'><strong>{{name}}</strong><small>{{description}}</small></div>"
    },
    "status-badge-template": {
      "html": "<span class='status-badge status-{{status | lowercase}}'>{{status}}</span>"
    },
    "action-buttons-template": {
      "html": "<div class='action-buttons'><button class='btn btn-sm btn-primary' onclick='openResource(\"{{id}}\")'>Open</button><button class='btn btn-sm btn-secondary' onclick='manageResource(\"{{id}}\")'>Manage</button></div>"
    }
  },
  "styles": {
    ".landing-header": {
      "margin-bottom": "20px",
      "padding": "20px",
      "background": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "color": "white",
      "border-radius": "8px"
    },
    ".welcome-text": {
      "font-size": "18px",
      "font-weight": "300"
    },
    ".recent-icons-section": {
      "margin-bottom": "30px"
    },
    ".recent-icons-grid": {
      "display": "grid",
      "grid-template-columns": "repeat(auto-fit, minmax(200px, 1fr))",
      "gap": "15px",
      "padding": "20px 0"
    },
    ".service-icon-container": {
      "display": "flex",
      "flex-direction": "column",
      "align-items": "center",
      "padding": "20px",
      "border": "1px solid #e1e1e1",
      "border-radius": "8px",
      "cursor": "pointer",
      "transition": "all 0.3s ease",
      "text-align": "center"
    },
    ".service-icon-container:hover": {
      "border-color": "#0078d4",
      "box-shadow": "0 4px 8px rgba(0,120,212,0.2)",
      "transform": "translateY(-2px)"
    },
    ".service-icon-container .icon": {
      "font-size": "32px",
      "margin-bottom": "10px",
      "color": "#0078d4"
    },
    ".service-name": {
      "font-weight": "500",
      "color": "#323130"
    },
    ".recent-services-section": {
      "margin-bottom": "30px"
    },
    ".three-column-layout": {
      "max-width": "100%",
      "overflow-x": "auto"
    },
    ".status-badge": {
      "padding": "4px 8px",
      "border-radius": "4px",
      "font-size": "12px",
      "font-weight": "500",
      "text-transform": "uppercase"
    },
    ".status-running": {
      "background-color": "#dff6dd",
      "color": "#107c10"
    },
    ".status-stopped": {
      "background-color": "#fde7e9",
      "color": "#d13438"
    },
    ".status-available": {
      "background-color": "#e1f3ff",
      "color": "#0078d4"
    },
    ".status-online": {
      "background-color": "#dff6dd",
      "color": "#107c10"
    },
    ".action-buttons": {
      "display": "flex",
      "gap": "5px"
    },
    ".action-buttons .btn": {
      "padding": "4px 8px",
      "font-size": "12px"
    },
    ".quick-actions-section": {
      "padding": "20px",
      "background-color": "#f8f9fa",
      "border-radius": "8px"
    },
    ".quick-action-button": {
      "margin-right": "10px",
      "margin-bottom": "10px"
    }
  },
  "events": {
    "openResource": {
      "type": "navigation",
      "target": "/resource/{{resourceId}}"
    },
    "manageResource": {
      "type": "action",
      "handler": "showResourceManagement"
    }
  }
}